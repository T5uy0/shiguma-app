<form class="w-1/3 mx-auto mt-12 bg-white p-4 rounded-md" action="/consumptions/<%= @consumption.id %>/update" method="post">
    <label for="meal">Votre ingrédiant :</label>
    <p>
        <select class="w-full mb-4 p-2 border border-black rounded-md py-5 space-y-4" name="meal" id="meal" required>
                <% @meals.each do |meal| %>
                <option value="<%= meal.id %>" <%= "selected" if @consumption.meal_id == meal.id %>><%= meal.name %></option>
                <% end %>
        </select>
        <label for="quantity">Quantité : </label>
        <input class="w-full mb-4 p-2 border border-black rounded-md py-5 space-y-4" type="number" name="quantity" id="quantity" value="<%= @consumption.quantity %>" min="0" required>
    </p>
    <button class="p-2 w-full text-center bg-blue-500 text-white rounded-md" type="submit">ajouter</button>
    <p><%= @err %></p>
</form>