<form class="w-1/3 mx-auto mt-12 bg-white p-4 rounded-md" action="/meals/<%= @meal.id %>/update" method="post">
    <h2>Modification de : <%= @meal.name %></h2>
    <label for="name">Nom :</label>
    <input class="w-full mb-4 p-2 border border-black rounded-md py-5 space-y-4" name="name" id="name" type="text">
    <label for="calories">Calories (kcal) :</label>
    <input class="w-full mb-4 p-2 border border-black rounded-md py-5 space-y-4" name="calories" id="calories" type="number" min="0" required>
    <button class="p-2 w-full text-center bg-blue-500 text-white rounded-md" type="submit">Valider</button>
    <p><%= @err %></p>
</form>