<form class="w-1/3 mx-auto mt-12 bg-white p-4 rounded-md" action="/masses/<%= @mass.id %>/update" method="post">
    <label for="mass">Modification de votre poid (kg) :</label>
    <input value="<%= @mass.mass %>" class="w-full mb-4 p-2 border border-black rounded-md py-5 space-y-4" name="mass" id="calories" type="number" min="0" required>
    <button class="p-2 w-full text-center bg-blue-500 text-white rounded-md" type="submit">valider</button>
    <p><%= @err %></p>
</form>